% ---- System plot ----
if ~exist('x1min','var') || ~exist('x1max','var') || ~exist('x2min','var') || ~exist('x2max','var')
    % fallback if area feature disabled
    x1min = -10; x1max = 10;
    x2min = -10; x2max = 10;
end

N = <var(plot_n)>;
x1_range = linspace(x1min, x1max, N);
x2_range = linspace(x2min, x2max, N);
[X1, X2] = meshgrid(x1_range, x2_range);

F1 = f1(X1, X2);
F2 = f2(X1, X2);

figure('Name','System plot','Color','w');
hold on; grid on; box on;
contour(X1, X2, F1, [0 0], 'LineWidth', 2);
contour(X1, X2, F2, [0 0], 'LineWidth', 2);
xlabel('x_1'); ylabel('x_2');
title('f_1=0 and f_2=0');
legend('f_1=0','f_2=0','Location','best');
hold off;
