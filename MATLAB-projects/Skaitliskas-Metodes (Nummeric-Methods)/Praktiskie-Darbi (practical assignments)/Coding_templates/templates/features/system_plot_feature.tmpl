% ---- Plot: f1=0 and f2=0 (uses apgabals) ----
[x1min, x1max, x2min, x2max] = sys2d_area_bounds(<var(x1_area)>, <var(x2_area)>);

nplot = <var(nplot)>;

f1 = matlabFunction(fun(1), 'Vars', [x1 x2]);
f2 = matlabFunction(fun(2), 'Vars', [x1 x2]);

x1_range = linspace(x1min, x1max, nplot);
x2_range = linspace(x2min, x2max, nplot);
[X1, X2] = meshgrid(x1_range, x2_range);

F1 = f1(X1, X2);
F2 = f2(X1, X2);

figure('Name','System plot','Color','w');
hold on; grid on; box on;
contour(X1, X2, F1, [0 0], 'LineWidth', 2);
contour(X1, X2, F2, [0 0], 'LineWidth', 2);
xlabel('x_1'); ylabel('x_2');
title('f_1=0 and f_2=0');
legend('f_1=0','f_2=0','Location','best');
hold off;
